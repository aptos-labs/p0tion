{
    "name": "@aptos-labs/zk-ceremony",
    "version": "0.0.11",
    "description": "All-in-one interactive command-line for interfacing with zkSNARK Phase 2 Trusted Setup ceremonies",
    "repository": "git@github.com:privacy-scaling-explorations/p0tion.git",
    "homepage": "https://github.com/privacy-scaling-explorations/p0tion",
    "bugs": "https://github.com/privacy-scaling-explorations/p0tion/issues",
    "type": "module",
    "license": "MIT",
    "bin": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "engines": {
        "node": ">=18.14.0"
    },
    "files": [
        "dist/",
        "src/",
        "types/",
        "README.md",
        ".env"
    ],
    "keywords": [
        "typescript",
        "zero-knowledge",
        "zk-snarks",
        "phase-2",
        "trusted-setup",
        "ceremony",
        "snarkjs",
        "circom"
    ],
    "scripts": {
        "cli": "tsx src/index.ts",
        "build:tsc": "rimraf dist && tsc --outDir dist",
        "build": "rimraf dist && rollup -c rollup.config.mjs src/index.ts",
        "build:all": "pnpm build:1 && pnpm build:2 && pnpm build:3",
        "build:1": "tsc --outDir dist",
        "build:2": "rollup dist/index.js --file dist/bundle.js --format esm",
        "build:3": "pkg dist/index.js --out-path dist",
        "bundle": "tsup src/index.ts --format esm --target ES2021",
        "build:watch": "rollup -c rollup.config.ts -w --configPlugin typescript",
        "start": "ts-node --esm ./src/index.ts",
        "auth": "yarn start auth",
        "contribute": "yarn start contribute",
        "clean": "yarn start clean",
        "list": "yarn start list",
        "logout": "yarn start logout",
        "validate": "yarn start validate",
        "coordinate:setup": "yarn start coordinate setup",
        "coordinate:observe": "yarn start coordinate observe",
        "coordinate:finalize": "yarn start coordinate finalize",
        "docs": "typedoc src/**/*.ts --out ../../docs/phase2cli"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^11.1.0",
        "@types/clear": "^0.1.2",
        "@types/cli-progress": "^3.11.0",
        "@types/figlet": "^1.5.6",
        "@types/node-emoji": "^1.8.2",
        "@types/node-fetch": "^2.6.3",
        "@types/prompts": "^2.4.4",
        "@types/snarkjs": "^0.7.8",
        "rollup": "^4.9.6",
        "rollup-plugin-inject-process-env": "^1.3.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "@adobe/node-fetch-retry": "^2.2.0",
        "@aptos-labs/zk-actions": "0.0.4",
        "@octokit/auth-oauth-device": "^4.0.4",
        "@octokit/request": "^6.2.3",
        "@rollup/plugin-typescript": "^11.1.0",
        "boxen": "^7.1.0",
        "chalk": "^5.2.0",
        "clear": "^0.1.0",
        "cli-progress": "^3.12.0",
        "clipboardy": "^3.0.0",
        "commander": "^10.0.1",
        "conf": "^11.0.1",
        "dotenv": "^16.0.3",
        "figlet": "^1.6.0",
        "firebase": "^9.21.0",
        "log-symbols": "^5.1.0",
        "node-disk-info": "^1.3.0",
        "node-emoji": "^1.11.0",
        "node-fetch": "^3.3.1",
        "open": "^9.1.0",
        "ora": "^6.3.0",
        "prompts": "^2.4.2",
        "read-package-up": "^11.0.0",
        "rimraf": "^5.0.0",
        "rollup": "^4.9.6",
        "snarkjs": "^0.6.11",
        "timer-node": "^5.0.7",
        "tslib": "^2.6.2",
        "tsx": "^4.7.0",
        "web-worker": "1.2.0",
        "winston": "^3.8.2"
    },
    "publishConfig": {
        "access": "public"
    },
    "pkg": {
        "assets": "fonts/**/*",
        "targets": [
            "node18-macos-arm64"
        ],
        "outputPath": "dist"
    }
}
