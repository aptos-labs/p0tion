{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "declaration": true,
        "moduleResolution": "Bundler",
        "module": "ES2015",
        "declarationMap": true,
        "sourceMap": true,
        "typeRoots": ["node_modules/@types", "../../types"],
        "target": "ES2021",
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
}
